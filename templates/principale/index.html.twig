{# templates/principale/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Playlists{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Liste des Playlists</h1>
    <a class="btn btn-custom mb-3" href="{{ path('principale_new') }}">Cr√©er une nouvelle Playlist</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Type</th>
                    <th>Taille</th>
                    <th>Langue</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for playlist in playlists %}
                <tr>
                    <td>{{ playlist.id }}</td>
                    <td>{{ playlist.nom }}</td>
                    <td>{{ playlist.type }}</td>
                    <td>{{ playlist.taille }}</td>
                    <td>{{ playlist.langue }}</td>
                    <td class="d-flex">
                        <a class="btn btn-info btn-sm me-2" href="{{ path('principale_show', {'id': playlist.id}) }}">Voir</a>
                        <a class="btn btn-warning btn-sm me-2" href="{{ path('principale_edit', {'id': playlist.id}) }}">Modifier</a>
                        <form action="{{ path('principale_delete', {'id': playlist.id}) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ playlist.id) }}">
                            <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
