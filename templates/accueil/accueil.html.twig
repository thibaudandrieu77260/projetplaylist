{# templates/accueil.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="jumbotron text-center">
        <h1 class="display-4">PlaylistCreator</h1>
        <p class="lead">Créer, modifier des playlists pour enjouer tous vos types de soirées/événements !</p>
        <hr class="my-4">
        <p>Connectez-vous pour commencer à utiliser PlaylistCreator</p>
        <a class="btn btn-custom btn-dark" href="{{ path('login') }}" role="button">Se connecter</a>
        {% if is_granted('ROLE_USER') %}
        <a class="btn btn-custom btn-dark" href="{{ path('principale') }}" role="button">Entrer</a>
        {% endif %}
    </div>
</div>
{% endblock %}
