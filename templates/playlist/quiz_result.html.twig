{# templates/Playlist/quiz_result.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Résultat du Quiz{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Résultat du Quiz</h1>

    <p>{{ result }}</p>
    
    {% if musique is not null %}
        <p>Musique : <strong>{{ musique.titre }}</strong></p>
        <p>Artiste correct : <strong>{{ musique.artiste }}</strong></p>
    {% endif %}

    {% if biography is not null %}
        <div class="mt-4">
            <h2>Biographie de l'artiste</h2>
            <p>{{ biography }}</p>
        </div>
    {% endif %}

    <a class="btn btn-secondary" href="{{ path('Playlist') }}">Retourner à la liste des Playlists</a>
</div>
{% endblock %}
